# Database Configuration
DATABASE_HOST=your-rds-proxy-endpoint.proxy-xxxxx.us-east-1.rds.amazonaws.com
DATABASE_PORT=5432
DATABASE_NAME=vantagepointcrm
DATABASE_USERNAME=postgres
DATABASE_PASSWORD_SECRET_ARN=arn:aws:secretsmanager:us-east-1:YOUR_ACCOUNT_ID:secret:vantagepointcrm/rds-password

# JWT Configuration
JWT_SECRET_ARN=arn:aws:secretsmanager:us-east-1:YOUR_ACCOUNT_ID:secret:vantagepointcrm/jwt-secret
JWT_EXPIRES_IN=1h

# Redis Configuration (for caching and rate limiting)
REDIS_HOST=your-redis-endpoint.cache.amazonaws.com
REDIS_PORT=6379
REDIS_PASSWORD_SECRET_ARN=arn:aws:secretsmanager:us-east-1:YOUR_ACCOUNT_ID:secret:vantagepointcrm/redis-password

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=YOUR_ACCOUNT_ID

# Application Configuration
NODE_ENV=production
PORT=3000
API_PREFIX=api/v1

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# CORS Configuration
CORS_ORIGINS=http://drofficeleads-production-1754283717.s3-website-us-east-1.amazonaws.com,https://crm.yourdomain.com,http://localhost:3000

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Security
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=12

# Audit Logging
AUDIT_LOG_TABLE=vantagepoint-audit-logs
RATE_LIMIT_TABLE=vantagepoint-rate-limits
